<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/medium</item>

    </style>

    <style name="EditTextMedium1" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/size_device_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:height">@dimen/size_device_45</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:theme">@style/ParentEditText</item>
    </style>

    <style name="ParentEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/et_light_grey</item>
        <item name="colorControlActivated">@color/sea_green</item>
        <item name="colorControlHighlight">@color/et_light_grey</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/snack_error_color</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextInputStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/sea_green</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="BtnPrimary" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/basic_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/btn_primary_rounded</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="BtnTransparent" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/basic_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/regular</item>

    </style>


    <style name="BoldText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/semibold</item>

    </style>
    <style name="ToolbarIcons" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/basic_white</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:gravity">center</item>

        <item name="android:fontFamily">@font/fontawesomeicons</item>

    </style>

    <style name="ToolbarTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/basic_white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/semibold</item>

    </style>

    <style name="GreyIcon" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/fontawesomeicons</item>
    </style>

    <style name="ErrorMessageText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/semibold</item>

    </style>
</resources>
